<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mykrovision.justscan.LoginFragments.LoginFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_margin="10dp"
            android:id="@+id/iv_logo"
            android:src="@mipmap/logo"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_username_outer"
            android:layout_width="match_parent"
            android:layout_below="@id/iv_logo"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_password_outer"
            android:layout_width="match_parent"
            android:layout_below="@id/et_username_outer"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password_outer"
            android:text="Login"
            android:textColor="#FFF"
            android:layout_margin="5dp"/>



    </RelativeLayout>



</FrameLayout>
